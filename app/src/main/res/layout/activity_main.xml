<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSegundaTela"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir segunda tela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBundle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Segunda tela com Bundle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSegundaTela" />

    <Button
        android:id="@+id/btnNavegador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir Navegador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBundle" />

    <Button
        android:id="@+id/btnTelefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir Discagem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNavegador" />

    <Button
        android:id="@+id/btnMensagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Mensagem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTelefone" />
</androidx.constraintlayout.widget.ConstraintLayout>